<h1>
  <img src="<%= @friend.gravatar_url %>" class="avatar" alt="">
  <%= @friend.username %>
</h1>

<div class="row">
  <div class="col-12 col-md-3">
    <div class="users_list">
      <%= render partial: 'rooms', locals: { users: @users} %>
    </div>
  </div>

  <div class="col" style="width:300px;">
    <div class="chat" data-channel-subscribe="room" data-room-id="<%= @room.id %> " data-user-id="<%= current_user.id %> ">
      <% @room_messages.each do |room_message| %>
        <div class="chat-message-container">
          <div class="row no-gutters">
            <div class="col">
              <div class="message-content" style="width:500px; float:<%= set_float_value(room_message) %>;">
                <p class="mb-1">
                  <%= room_message.message %>
                </p>

                <div class="text-right">
                  <small>
                    <%= room_message.created_at %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%= simple_form_for @room_message, remote: true do |form| %>
      <div class="input-group mb-3">
        <%= form.input :message, as: :string, wrapper: false, label: false, input_html: { class: 'chat-input', autocomplete: 'off' } %>
        <div class="input-group-append">
          <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
        </div>
      </div>

      <%= form.input :room_id, as: :hidden %>
      <%= hidden_field_tag :current_user_id, value: current_user.id, as: :hidden %>
    <% end %>
  </div>
</div>

<div class="d-none" data-role="message-template">
  <div class="chat-message-container">
    <div class="row no-gutters">

      <div class="col">
        <div class="message-content" data-role="message-content" style="width:300px;">
          <p class="mb-1" data-role="message-text">

          </p>

          <div class="text-right">
            <small data-role="message-date">
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
